{
  "name": "is-takip-sistemi",
  "version": "2.2.5",
  "description": "Modern İş Takip Sistemi - Electron + React + TypeScript",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "vite",
    "electron:single": "vite --mode electron",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w sqlite3",
    "build:electron": "npm run build && electron-builder --config electron-builder.yml",
    "build:portable": "npm run build && electron-builder --config electron-builder.yml --win portable",
    "dist": "npm run build && electron-builder --config electron-builder.yml --publish=never",
    "dist:dir": "npm run build && electron-builder --config electron-builder.yml --dir"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "tailwind",
    "vite"
  ],
  "author": "Ramazan Catal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mukerremmert/istakip.git"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "^0.5.18",
    "@types/jspdf": "^1.3.3",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react": "^5.0.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-updater": "^6.6.2",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.13",
    "terser": "^5.44.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-plugin-electron": "^0.29.0"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.8",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^6.16.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/react-router-dom": "^5.3.3",
    "electron-log": "^5.4.3",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.1.0",
    "framer-motion": "^12.23.19",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "prisma": "^6.16.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.63.0",
    "react-router-dom": "^7.9.1",
    "sqlite3": "^5.1.7",
    "wait-on": "^9.0.1",
    "xlsx": "^0.18.5",
    "zod": "^4.1.11",
    "zustand": "^5.0.8"
  }
}
